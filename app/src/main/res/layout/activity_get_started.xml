<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.drivoapp.GetStarted">


    <ImageView
        android:id="@+id/drivo_logo_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/drivo_logo_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/get_started_text"
        android:layout_width="408dp"
        android:layout_height="285dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="cari dan sewa mobil dengan mudah."
        android:textColor="@color/purple"
        android:textSize="66sp"
        android:lineHeight="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drivo_logo_horizontal" />

    <ImageView
        android:id="@+id/get_started_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_started_text"
        app:srcCompat="@drawable/car_get_started"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Mulai"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/gilroy_bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="22dp"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>